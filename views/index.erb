<h1>Ruby Monstas at Eurucamp 2015</h1>
<h2>List of Participants</h2>

<% if @message %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <%= @message %>
  </div>
<% end %>

<ul>
  <% @members.each do |member| %>
    <li>
      <a href="/members/<%= member.id %>"><%= member.name %></a>
      <% if authorized? %>
        <a href="/members/<%= member.id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        <a href="/members/<%= member.id %>/delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      <% end %>
    </li>
  <% end %>
</ul>

<% if authorized? %>
  <a id="create_new" href="/members/new">New participant</a>
<% end %>
